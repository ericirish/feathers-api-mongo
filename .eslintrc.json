{
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "extends": ["airbnb-base"],
  "rules": {
    "class-methods-use-this": 0,
    "no-await-in-loop": 0,
    "no-continue": 0,
    "no-nested-ternary": 0,
    "no-param-reassign": 0,
    "no-plusplus": 0,
    "no-restricted-syntax": [
      0,
      "ForOfStatement"
    ],
    "no-underscore-dangle": 0,
    "semi": [
      "error",
      "never"
    ]
  }
}